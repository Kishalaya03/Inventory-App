<!-- views/add-product.ejs and it is used for the adding of the new product if you want to -->

<h1 class="mt-5 mb-4">Add New Product</h1>
<!-- Bootstrap taken error messages for the ejs file if there is an error anyway -->
<%if(errorMessage){%>
<div class="alert alert-danger" role="alert"><%=errorMessage%></div>
<%}%>
<!-- enctype means encryption type -->
<div class="mb-3">
  <form action="/" method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="name" class="form-label">Product Name</label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="mb-3">
      <label for="desc" class="form-label">Product Description</label>
      <textarea class="form-control" id="desc" name="desc" rows="3"></textarea>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="price"
        step="0.01"
      />
    </div>
    <div class="mb-3">
      <label for="imageUrl" class="form-label">Image URL</label>
      <!-- <input type="text" class="form-control" id="imageUrl" name="imageUrl" /> -->
      <!-- here we are changing the input of images from 
      url to file upload.Not only that we are also limiting it to only images not pdfs
      or any other file extensions(that is through the accept keyword)  -->
      <input type="file" name="imageUrl" id="imageUrl" accept="images/*" />
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
  </form>
</div>
